import java.util.Scanner;


public class Main {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
       Scanner sc= new Scanner(System.in);
       long m;
       long b;
     
       while(sc.hasNext()){
         m=sc.nextLong();
         b=sc.nextLong();
           System.out.println((m*b)-1);
       }
       
    }
    
}
